<div class="index-map-info">
  {{#if title}}
    <h3>{{title}}</h3>
  {{/if}}
  <div class="">
    {{#if thumbnailUrl}}
      {{#if websiteUrl}}
        <a href="{{websiteUrl}}">
          <img src="{{thumbnailUrl}}" class="img-responsive">
        </a>
      {{else}}
        <img src="{{thumbnailUrl}}">
      {{/if}}
    {{/if}}
    <dl>
      {{#if websiteUrl}}
        <dt>Website</dt>
        <dd><a href="{{websiteUrl}}">{{websiteUrl}}</a></dd>
      {{/if}}
      {{#if downloadUrl}}
        <dt>Download</dt>
        <dd><a href="{{downloadUrl}}">{{downloadUrl}}</a></dd>
      {{/if}}
      {{#if recordIdentifier}}
        <dt>Record Identifier</dt>
        <dd>{{recordIdentifier}}</dd>
      {{/if}}
      {{#if label}}
        <dt>Label</dt>
        <dd>{{label}}</dd>
      {{/if}}
      {{#if note}}
        <dt>Note</dt>
        <dd>{{note}}</dd>
      {{/if}}
    </dl>
  </div>
</div>
